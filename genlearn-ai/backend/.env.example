# GenLearn AI - Environment Variables Template
# Copy this file to .env and fill in your API keys

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
APP_NAME=GenLearn AI
APP_ENV=development
DEBUG=true
SECRET_KEY=change_this_to_a_random_secret_key_in_production

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:5173

# ==============================================================================
# PROVIDER SELECTION
# ==============================================================================
# Change these to switch between providers without changing code!
AI_PROVIDER=gemini          # Options: gemini, openai, anthropic
IMAGE_PROVIDER=gemini       # Options: gemini, imagen, fibo, stability (gemini uses Imagen 3)
VOICE_TTS_PROVIDER=gcp      # Options: gcp, azure
VOICE_STT_PROVIDER=gcp      # Options: gcp, azure

# ==============================================================================
# GOOGLE GEMINI 2.0 (Primary AI Provider + Imagen 3 for Images)
# ==============================================================================
# Using latest Gemini 2.0 Flash model for AI capabilities
# Using Imagen 3 for image generation
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_IMAGE_MODEL=imagen-3.0-generate-002

# ==============================================================================
# GOOGLE CLOUD PLATFORM (Primary Voice Provider)
# ==============================================================================
GCP_PROJECT_ID=your_gcp_project_id
GCP_STT_API_KEY=your_gcp_stt_api_key
GCP_STT_ENDPOINT=https://speech.googleapis.com/v1
GCP_TTS_API_KEY=your_gcp_tts_api_key
GCP_TTS_ENDPOINT=https://texttospeech.googleapis.com/v1

# ==============================================================================
# FIBO API (Primary Image Generation Provider)
# ==============================================================================
FIBO_API_KEY=your_fibo_api_key_here
FIBO_API_ENDPOINT=https://api.fibo.ai/v1

# ==============================================================================
# FALLBACK PROVIDERS (Optional)
# ==============================================================================

# OpenAI (Fallback for Gemini)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Fallback for Gemini)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Stability AI (Fallback for FIBO)
STABILITY_API_KEY=your_stability_api_key_here

# Azure (Fallback for GCP Voice)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region

# ==============================================================================
# JWT SETTINGS
# ==============================================================================
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==============================================================================
# FILE PATHS (Relative to backend directory)
# ==============================================================================
DATA_DIR=./data
CSV_DIR=./data/csv
MEDIA_DIR=./data/media

# ==============================================================================
# NOTES
# ==============================================================================
# - Never commit the .env file to version control
# - Keep API keys secure and rotate them periodically
# - For production, use proper secrets management (AWS Secrets Manager, etc.)
# - Generate a strong SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
